<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activityVerticalMargin"
    android:paddingBottom="@dimen/activityVerticalMargin"
    android:paddingLeft="@dimen/activityHorizontalMargin"
    android:paddingRight="@dimen/activityHorizontalMargin"
    android:background="@drawable/ufop_watermark"
    tools:context="br.ufop.icea.encontrodesaberes.view.AboutActivity">
    <ImageView
        android:id="@+id/imageIcea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icea_big_logo"/>
    <TextView
        android:id="@+id/textIcea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageIcea"
        android:layout_centerHorizontal="true"
        android:text="@string/icea"
        android:layout_marginBottom="@dimen/aboutMarginLogo"
        android:textColor="@color/secondTextColor"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/textDesenvolvedores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textIcea"
        android:layout_centerHorizontal="true"
        android:text="@string/desenvolvedores"
        android:textSize="@dimen/aboutSubSize"
        android:textStyle="bold"
        android:textColor="@color/secondTextColor"/>
    <TextView
        android:id="@+id/textAline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDesenvolvedores"
        android:layout_centerHorizontal="true"
        android:textColor="@color/secondTextColor"
        android:text="@string/aline"/>
    <TextView
        android:id="@+id/textDavidson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAline"
        android:layout_centerHorizontal="true"
        android:textColor="@color/secondTextColor"
        android:text="@string/davidson"/>
    <TextView
        android:id="@+id/textMariaLuisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDavidson"
        android:layout_centerHorizontal="true"
        android:textColor="@color/secondTextColor"
        android:text="@string/mariaLuisa"/>
    <TextView
        android:id="@+id/textMaycon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMariaLuisa"
        android:layout_centerHorizontal="true"
        android:textColor="@color/secondTextColor"
        android:text="@string/maycon"/>
    <LinearLayout
        android:id="@+id/layoutUfop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageUfop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ufop_logo"/>
        <TextView
            android:id="@+id/textUfop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/ufop"
            android:textColor="@color/secondTextColor"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutPropp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imagePropp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/propp_logo"/>
        <TextView
            android:id="@+id/textPropp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/propp"
            android:textColor="@color/secondTextColor"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutPropp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/aboutMarginLogo"
        android:text="@string/apoio"
        android:textStyle="bold"
        android:textSize="@dimen/aboutSubSize"
        android:textColor="@color/secondTextColor"/>

</RelativeLayout>
